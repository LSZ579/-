/* pages/shareDetail/index.wxss */
.page{
  width:100%;
overflow-x:hidden;
}
.comment{
  padding-bottom: 5rpx;
  text-align: left;

  border-bottom: 8rpx solid rgb(255, 60, 0);
}
.support{
  flex:60%;
  text-align: right;
  font-size: 28rpx;
  padding-top: 5rpx;
  color: grey;
}
.fixed{
  margin: 0px 0px!important;
  width: 100%;
  position: fixed;
  bottom: 0;
  background-color: white;
  border-top: 1rpx solid rgb(235, 235, 235);
  z-index: 9;
}
.btn{
  border: none!important;
}
.pop-bgm{
  width: 100%;
  position: absolute;
  top: 0;
  bottom: 0;
  height: 100vh;
  background-color: rgba(128, 128, 128, 0.288);
}
.showbgm{
  display: block;
}
.hidebgm{
  transform: translateY(100em);
}
.pop{
  height: 60vh;
  position: absolute;
  bottom: 0;
  width: 100%;
}
.hide{
  background-color: hotpink;
  transform: translateY(60vh);
  animation: popup 0.4s ease;
}
.show{
  animation: pop 0.4s ease;
  height: 60vh;
  position: absolute;
  bottom: 0;
  width: 100%;
  background-color: hotpink;
  z-index: 999;
}
  @keyframes pop{
    from{
      transform: translateY(60vh);
      
    }
    to{
      transform: translateY(0);
    }
  }
  @keyframes popup{
    from{
      transform: translateY(0);
      
    }
    to{
      transform: translateY(60vh);
    }
  }

  .active{
    animation: sa 0.5s ease;
  }
  @keyframes sa{
    10%{
      transform: scale(1);
    }
    60%{
      transform: scale(1.4);
    }
    100%{
      transform: scale(1);
    }
  }
  .share-btn{
    display: flex;
    padding-bottom: 0 ;
    background-color: white;
    padding-top: 0 ;
    flex-direction: row;
    justify-content: center;
    align-items: center;
  }

  .com-contents{
    margin-top: 5px;
    font-size: 29rpx;
  }
.com{
  width: 100%;
  padding-bottom: 10px;
  margin-bottom: 10px;
  border-bottom: 1rpx solid rgba(220, 220, 220, 0.753);
  
}
  .com-time{
   flex: 100px;
   text-align: right;
   font-size: 22rpx;
  }

  .com-author-info{
    display: flex;
    flex-direction: row;
    margin: 10rpx 9px;
  }

  .com-author-info .com-avatar{
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
  }


  .cancel{
    width: 97vw;
    text-align: right;
    padding-top: 15rpx;
  }
  .content_value{
    margin: 10px;
    padding: 5px;
    background-color: rgba(220, 220, 220, 0.397);
  }
  .bottom-btn{
    border-radius: 8px;
    width: 90%;
